<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.gwtcraft.client.places.upgrade.spell.UpgradeItemSpellDisplay.Style">
		
		.info {
			display: inline;
		}
		
		.upgrade {
			color: green;
		}
		
		.downgrade {
			color: red;
		}
	
	</ui:style>
	
	<g:HTMLPanel ui:field="wrapper">
		<g:Label styleName="{style.info}" ui:field="type"/>
		<g:HTML styleName="{style.info}"> : </g:HTML>
		<g:Label styleName="{style.info}" ui:field="description"/>
	</g:HTMLPanel>
</ui:UiBinder> 