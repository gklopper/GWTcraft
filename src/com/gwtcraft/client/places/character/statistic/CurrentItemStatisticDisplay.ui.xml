<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
		.info {
			display: inline;
		}
	
	</ui:style>
	
	<g:HTMLPanel>
		<g:Label styleName="{style.info}" ui:field="statistic"/>
		<g:HTML styleName="{style.info}"> : </g:HTML>
		<g:Label styleName="{style.info}" ui:field="value"/>
	</g:HTMLPanel>
</ui:UiBinder> 