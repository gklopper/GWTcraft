<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.gwtcraft.client.ui.search.SearchResultDisplay.Style">
		.hide {
			display: none;
		}
		.show {
			display: block;
			margin-left: auto;
			margin-right: auto;
		}
		.loader{
			padding-top: 100px;
		}
	</ui:style>
	<g:FlowPanel>
		<g:FlowPanel ui:field="resultsWrapper"></g:FlowPanel>
		<g:FlowPanel styleName="{style.loader}">
			<g:Image styleName="{style.hide}" ui:field="loaderImage" url="/images/loader.gif"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 