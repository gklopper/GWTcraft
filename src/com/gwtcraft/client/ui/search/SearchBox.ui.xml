<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style field="common" src="../common.css"/>
	
	<ui:style>
		.searchBox {
		 	height: 34px;
		 	width: 280px;
		 	margin-top: 3px;
		 	margin-bottom: 3px;
		 	margin-left: 2px;	
		 	font-size: 28px;
		}
		.search {
			max-height: 40px;
			min-height: 40px;	
		}
		
		.searchButton {
			height: 34px;
		 	margin-top: 3px;
		 	margin-bottom: 3px;
		 	margin-left: 2px;
		}
	</ui:style>
	
	<g:FlowPanel styleName="{common.underline} {style.search}">
		<g:HorizontalPanel>
			<g:TextBox styleName="{style.searchBox} {common.defaultFont}" ui:field="searchText"></g:TextBox>
			<g:Image styleName="{style.searchButton}" url="/images/search.png" ui:field="search"></g:Image>
		</g:HorizontalPanel>
	</g:FlowPanel>
	
</ui:UiBinder> 