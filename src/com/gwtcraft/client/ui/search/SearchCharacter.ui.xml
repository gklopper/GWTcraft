<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style field="common" src="../common.css"/>

	<ui:style>	
		.realm {
			color: graytext;
			font-style: italic;
		}
		
		.go {
			width: 30px;
			height: 30px;
			margin-bottom: 2px;
		}
		
		.details {
			float: left;
			min-width: 290px;
			margin-bottom: 2px;
		}
		
		.character {
			clear: left;
		}
	</ui:style>
	
	<g:HTMLPanel styleName="{common.underline} {style.character}">
		<g:FlowPanel styleName="{style.details}">
			<g:Label ui:field="name" styleName="{common.defaultFont}"/>
			<g:Label styleName="{style.realm} {common.defaultFont}" ui:field="realm" />
		</g:FlowPanel>
	<g:Image styleName="{style.go}" url="/images/go.png"/>
		
	</g:HTMLPanel>
</ui:UiBinder> 