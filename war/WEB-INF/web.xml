<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>armoryServlet</servlet-name>
    <servlet-class>com.gwtcraft.server.ArmoryServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>statsServlet</servlet-name>
    <servlet-class>com.gwtcraft.server.StatisticsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>armoryServlet</servlet-name>
    <url-pattern>/gwtcraft/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>statsServlet</servlet-name>
    <url-pattern>/stats</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>GwtCraft.html</welcome-file>
  </welcome-file-list>

</web-app>
